[mysqld]
# Performance optimizations for large content operations

# Memory allocation - quadruple key settings
innodb_buffer_pool_size = 1G
key_buffer_size = 256M
sort_buffer_size = 8M
read_buffer_size = 2M
read_rnd_buffer_size = 4M
join_buffer_size = 8M

# Connection and thread settings
max_connections = 200
thread_cache_size = 50
table_open_cache = 4000
table_definition_cache = 2000

# InnoDB optimizations for bulk operations
innodb_log_file_size = 256M
innodb_log_buffer_size = 32M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_file_per_table = ON
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000

# Query cache for repeated searches
query_cache_type = ON
query_cache_size = 128M
query_cache_limit = 4M

# Temporary table optimization
tmp_table_size = 128M
max_heap_table_size = 128M

# Binary logging optimization
binlog_cache_size = 2M
max_binlog_cache_size = 8M

# MyISAM optimization for mixed workloads
myisam_sort_buffer_size = 64M

# Timeout settings for long operations
wait_timeout = 600
interactive_timeout = 600
lock_wait_timeout = 120

# Character set for full UTF-8 support
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Disable performance schema to save memory
performance_schema = OFF
